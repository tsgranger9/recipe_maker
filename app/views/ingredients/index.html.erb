<h1>Listing ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Carbohydrate</th>
      <th>Sugar</th>
      <th>Saturated fat</th>
      <th>Total fat</th>
      <th>Protein</th>
      <th>Calories</th>
      <th>Recipe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.carbohydrate %></td>
        <td><%= ingredient.sugar %></td>
        <td><%= ingredient.saturated_fat %></td>
        <td><%= ingredient.total_fat %></td>
        <td><%= ingredient.protein %></td>
        <td><%= ingredient.calories %></td>
        <td><%= ingredient.recipe %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

